<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Fragments.FragmentAdvDetails"
    android:background="@drawable/dialog_bg">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                tools:ignore="MissingConstraints">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cars_view_first"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="5dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <ImageView
                            android:id="@+id/iv_banner_image"
                            android:layout_width="match_parent"
                            android:layout_height="250dp"
                            android:adjustViewBounds="true"
                            android:scaleType="centerCrop"
                            android:src="@drawable/cloth" />

                        <LinearLayout
                            android:id="@+id/ll_image"
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_below="@id/iv_banner_image"
                            android:layout_marginLeft="20dp"
                            android:layout_marginTop="-50dp"
                            android:background="@color/white"
                            android:padding="10dp">

                            <ImageView
                                android:id="@+id/iv_shop_image"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:adjustViewBounds="true"
                                android:background="@color/white"
                                android:scaleType="fitXY"
                                android:src="@drawable/small_img" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_add_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/iv_banner_image"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/ll_image"
                            android:text="Wind hans Technologies"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:textStyle="bold"/>

                        <TextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll_image"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="3dp"
                            android:text="3 min ago" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_date_time"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="3dp"
                            android:layout_marginBottom="3dp"
                            android:drawableStart="@drawable/add_location"
                            android:maxLength="20"
                            android:text="Nashik"
                            android:textSize="13dp" />

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>


            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_margin="20dp"
                android:background="@drawable/discription_design">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Discription"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:textSize="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="10dp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_bullet"
                        android:drawableTint="#F44336"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/discription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The spelling mistakes in the text had been highlighted in green."
                        android:textColor="@color/black"
                        android:textSize="15dp"/>
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="10dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Name"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/StoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Wins Hans Technology"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="40dp"/>



                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Store Address"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="10dp"/>

                    <TextView
                        android:id="@+id/adv_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Near Pinacal Mall CBS Nashik"
                        android:textColor="@color/black"
                        android:textSize="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="40dp"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">



                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Store Contact"
                            android:textColor="@color/black"
                            android:textStyle="bold"
                            android:textSize="20dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="10dp"/>



                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="7548961234"
                            android:textColor="@color/black"
                            android:textSize="15dp"
                            android:layout_marginBottom="10dp"
                            android:layout_marginLeft="40dp"
                            android:textAlignment="gravity"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="end">

                    <ImageView
                        android:id="@+id/iv_like_adv"
                        android:layout_width="35dp"
                        android:layout_height="35dp"
                        android:src="@drawable/ic_unlike"
                        android:layout_gravity="center"
                        android:layout_marginRight="20dp"
                        android:layout_marginTop="10dp"/>
                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_margin="20dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                <Button
                    android:id="@+id/btn_direction"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    style="Style/Widget.MaterialComponants.Button.Icon"
                    android:text="Direction"
                    android:drawableLeft="@drawable/ic_round_directions_24"
                    android:drawableTint="@color/white"
                    android:backgroundTint="#393131"
                    android:textSize="15dp"
                    android:padding="@dimen/margin_10"
                    />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/dp_20">
                <Button
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/dp_150"
                    android:layout_height="wrap_content"
                    android:text="Share"
                    android:drawableLeft="@drawable/iv_share"
                    android:backgroundTint="#FFEE54"
                    android:drawableTint="@color/white"
                    android:textSize="15dp"
                    android:padding="@dimen/margin_10"

                    />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_margin="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="AD ID :"
                    android:textSize="20dp"
                    android:textStyle="bold"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/adv_ADID"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="459848"
                    android:textSize="15dp"
                    android:textColor="@color/black"/>

                <TextView
                    android:id="@+id/reportAD"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="REPORT AD"
                    android:textSize="15dp"
                    android:textStyle="bold"
                    android:textColor="#F44336"
                    android:textAlignment="viewEnd"
                    android:layout_marginRight="10dp"/>






            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>