<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="600dp"
    android:background="@drawable/dialog_bg"
    tools:context=".Fragments.FragmentAdvDetails"
    android:layout_margin="@dimen/dp_5"
    android:elevation="@dimen/dp_0"
    app:cardElevation="@dimen/dp_0"
    app:cardCornerRadius="15dp">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="20dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

<androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/dp_5"
    android:elevation="@dimen/dp_0"
    app:cardElevation="@dimen/dp_0"
    app:cardCornerRadius="8dp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/border"
                        >

                        <ImageView
                            android:id="@+id/iv_banner_image"
                            android:layout_width="match_parent"
                            android:layout_height="210dp"
                            android:adjustViewBounds="true"
                            android:background="@drawable/border"
                            android:scaleType="centerCrop"
                            android:visibility="gone"
                            android:src="@drawable/cloth" />

                        <WebView
                            android:id="@+id/webview"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:background="@drawable/border"
                            tools:ignore="WebViewLayout" />

                        <LinearLayout
                            android:id="@+id/ll_image"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/webview"
                            android:layout_marginLeft="@dimen/dp_20"
                            android:layout_marginTop="-30dp"
                            android:background="@drawable/border_layout_store_image"
                            android:padding="@dimen/ten">

                            <ImageView
                                android:id="@+id/iv_shop_image"
                                android:layout_width="71dp"
                                android:layout_height="63dp"
                                android:adjustViewBounds="true"
                                android:background="@drawable/background_shop_image"
                                android:scaleType="fitXY"
                                android:src="@drawable/no_image_available" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_add_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/webview"
                            android:layout_marginLeft="10dp"
                            android:layout_marginTop="5dp"
                            android:layout_toRightOf="@+id/ll_image"
                            android:text="Wind hans Technologies"
                            android:textColor="@color/black"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_date_time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/ll_image"
                            android:layout_marginStart="30dp"
                            android:layout_marginBottom="3dp"
                            android:text="3 min ago"
                            android:textColor="@color/black"
                            android:textSize="@dimen/sp_12"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_location"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/tv_date_time"
                            android:layout_alignParentRight="true"
                            android:layout_marginStart="3dp"
                            android:layout_marginEnd="15dp"
                            android:layout_marginBottom="3dp"
                            android:drawableStart="@drawable/ic_location_on_24"
                            android:ellipsize="end"
                            android:text="Nashik"
                            android:textSize="10dp" />

                    </RelativeLayout>


</androidx.cardview.widget.CardView>

            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/discription_design"
                android:orientation="vertical"
                android:layout_marginTop="@dimen/dp_10">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginBottom="16dp"
                    android:text="Discription"
                    android:textColor="@color/light_black_background"
                    android:textSize="18sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <TextView
                        android:layout_width="10dp"
                        android:layout_height="10dp"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="20dp"
                        android:drawableLeft="@drawable/ic_bullet"
                        android:drawableTint="#F44336"
                        android:layout_marginTop="5dp"/>

                    <TextView
                        android:id="@+id/discription"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="The spelling mistakes in the text had been highlighted in green."
                        android:textColor="@color/black"
                        android:textSize="14sp" />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="10dp"
                        android:text="Store Name"
                        android:textColor="@color/light_black_background"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/StoreName"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="Wins Hans Technology"
                        android:textColor="@color/black"
                        android:textSize="14sp" />


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="10dp"
                        android:layout_marginBottom="7dp"
                        android:text="Store Address"
                        android:textColor="@color/light_black_background"
                        android:textSize="18dp" />

                    <TextView
                        android:id="@+id/adv_Address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="40dp"
                        android:layout_marginBottom="10dp"
                        android:text="Near Pinacal Mall CBS Nashik"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:layout_marginBottom="4dp"
                            android:text="Store Contact"
                            android:textColor="@color/light_black_background"
                            android:textSize="18dp" />


                        <TextView
                            android:id="@+id/mobile_number"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="40dp"
                            android:layout_marginBottom="10dp"
                            android:text="8956535974"
                            android:textAlignment="gravity"
                            android:textColor="@color/black"
                            android:textSize="14sp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:gravity="end"
                        android:background="@drawable/demo_design"
                        android:layout_marginLeft="90dp">

<!--                        <ImageView-->
<!--                            android:id="@+id/iv_like_adv"-->
<!--                            android:layout_width="35dp"-->
<!--                            android:layout_height="35dp"-->
<!--                            android:layout_gravity="center"-->
<!--                            android:layout_marginTop="10dp"-->
<!--                            android:layout_marginRight="20dp"-->
<!--                            android:src="@drawable/ic_unlike_" />-->

                        <ImageView
                            android:id="@+id/iv_like_adv"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_unlike_img"
                            android:layout_gravity="center"
                            android:layout_marginRight="12dp"/>
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="2"
                android:layout_marginTop="14dp">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">

                    <Button
                        android:id="@+id/btn_direction"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableLeft="@drawable/ic_direction_"
                        android:text="Direction"
                        android:textAlignment="viewStart"
                        android:textSize="16sp"
                        android:textColor="@color/white"
                        android:padding="13dp"
                        android:backgroundTint="@color/light_black_background" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_marginLeft="10dp">

                    <Button
                        android:id="@+id/btn_share"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:backgroundTint="@color/light_yellow_background"
                        android:drawableLeft="@drawable/ic_final_share_24"
                        android:text="Share"
                        android:textSize="15sp"
                        android:textColor="@color/white"
                        android:padding="13dp"
                        android:textAlignment="viewStart"/>

                </LinearLayout>






            </LinearLayout>

